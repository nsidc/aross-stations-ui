{
  "compilerOptions": {
    "baseUrl": "./apps/aross-stations/",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

    /* Added to make the vite template build */
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": ["vite.config.ts"]
}
